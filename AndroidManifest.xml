<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dgz.bluetooth"
    android:versionCode="1"
    android:versionName="2.0" >

    <application
        android:icon="@drawable/tpms"
        android:label="@string/app_name" >
        <activity
            android:name=".Bluetooth"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".chatActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="dgz.bluetooth.deviceActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="dgz.bluetooth.encryptionActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="dgz.bluetooth.dataViewActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="dgz.bluetooth.setView"
            android:screenOrientation="landscape" />
        <activity
            android:name="dgz.bluetooth.setView1"
            android:screenOrientation="landscape" />
    </application>

    <uses-sdk android:minSdkVersion="8" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

</manifest>